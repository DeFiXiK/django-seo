# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120

[*.{py,rst,ini}]
trim_trailing_whitespace = true

[*.{html,css,scss,json,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[LICENSE]
insert_final_newline = false
